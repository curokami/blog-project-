---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import FeaturedPost from '../components/FeaturedPost.astro';
import RecentPostItem from '../components/RecentPostItem.astro';
import Footer from '../components/Footer.astro';

// ダミーデータ
const recentPosts = [
    {
        title: "Embracing Change: A New Chapter",
        description: "Moving forward with optimism and embracing new opportunities.",
        imageUrl: "https://images.pexels.com/photos/2101836/pexels-photo-2101836.jpeg?auto=compress&cs=tinysrgb&w=800"
    },
    {
        title: "Finding Balance in a Busy World",
        description: "Tips for managing stress and maintaining a healthy work-life balance.",
        imageUrl: "https://images.pexels.com/photos/3771089/pexels-photo-3771089.jpeg?auto=compress&cs=tinysrgb&w=800"
    },
    {
        title: "The Power of Positive Thinking",
        description: "How a positive mindset can transform your life and help you achieve your goals.",
        imageUrl: "https://images.pexels.com/photos/7645366/pexels-photo-7645366.jpeg?auto=compress&cs=tinysrgb&w=800"
    }
];
---

<Layout title="My Blog">
	<main>
		<Header />
		<FeaturedPost />
		
		<section class="px-6 mb-4">
			<h2 class="text-xl font-bold text-gray-800">Recent Posts</h2>
		</section>

		{recentPosts.map(post => (
			<RecentPostItem 
				title={post.title} 
				description={post.description} 
				imageUrl={post.imageUrl} 
			/>
		))}

		<Footer activePage="home" />
	</main>
</Layout>
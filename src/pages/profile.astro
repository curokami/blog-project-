---
import Icon from '../components/Icon.astro';
---

<html lang="en">
  <head>
    <title>Profile</title>
    <meta charset="UTF-8" />
  </head>
  <body class="bg-[#F9F9F9] font-sans text-[#333]">

    <!-- 戻るアイコン -->
    <header class="flex items-center justify-between p-4">
      <button>
        <Icon name="arrow-left" className="w-6 h-6 text-gray-800" />
      </button>
    </header>

    <main class="px-4 py-6 text-center">
      <!-- プロフィール画像 -->
      <div class="flex justify-center">
       <img src="/images/profile.jpeg" alt="Profile picture" class="w-32 h-32 rounded-full" />
      </div>

      <!-- 名前 & 肩書き -->
      <h1 class="text-xl font-bold mt-4">Alex Turner</h1>
      <p class="text-sm text-gray-500">Author & Narrator</p>
      <p class="text-sm text-gray-500 mt-1">Sharing my journey and insights with a global audience.</p>

      <!-- About Me -->
      <section class="mt-6 text-left">
        <h2 class="text-md font-bold">About Me</h2>
        <p class="mt-1 text-sm">
          I'm an author and narrator dedicated to sharing personal experiences and insights.
          This platform is a space for connection and exploration through the power of words.
        </p>
      </section>

      <!-- SNSリンク -->
      <section class="mt-6 text-left">
        <h2 class="text-md font-bold">Connect</h2>
        <ul class="mt-2 space-y-2">
          <li class="flex items-center space-x-3">
            <div class="bg-gray-100 rounded-full p-2">
              <Icon name="rss" className="w-5 h-5" />
            </div>
            <span>Twitter</span>
          </li>
          <li class="flex items-center space-x-3">
            <div class="bg-gray-100 rounded-full p-2">
              <Icon name="rss" className="w-5 h-5" />
            </div>
            <span>Instagram</span>
          </li>
          <li class="flex items-center space-x-3">
            <div class="bg-gray-100 rounded-full p-2">
              <Icon name="rss" className="w-5 h-5" />
            </div>
            <span>GitHub</span>
          </li>
        </ul>
      </section>
    </main>

    <!-- フッター -->
    <footer class="fixed bottom-0 left-0 right-0 bg-white shadow p-4 flex justify-around">
      <Icon name="home" />
      <Icon name="search" />
      <Icon name="plus" />
      <Icon name="profile-solid" />
    </footer>

  </body>
</html>
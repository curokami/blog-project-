---
interface Props {
    slug: string;
    title: string;
    pubDate: Date;
    description: string;
    image?: string;
}

const { slug, title, pubDate, description, image } = Astro.props;
const formattedDate = new Intl.DateTimeFormat('en-US', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
}).format(pubDate);
---
<a href={`/posts/${slug}`} class="flex items-center gap-4 p-4">
    <div class="w-24 h-24 flex-shrink-0">
        <img src={image || '/images/default.jpg'} alt={title} class="w-full h-full object-cover rounded-lg">
    </div>
    <div class="flex-1">
        <h3 class="font-bold text-gray-800 mb-1 leading-tight">{title}</h3>
        <p class="text-sm text-gray-500 mb-2">Published on {formattedDate}</p>
        <p class="text-sm text-gray-600 leading-relaxed">{description}</p>
    </div>
</a>
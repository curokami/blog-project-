---
interface Props {
    category: string;
    title: string;
    description: string;
    imageUrl: string;
}
const { category, title, description, imageUrl } = Astro.props;
---
<div class="flex items-center gap-4 px-4 py-4">
    <div class="flex-1">
        <p class="text-sm font-semibold text-gray-500 mb-1">{category}</p>
        <h3 class="font-bold text-lg text-gray-800 mb-1 leading-tight">{title}</h3>
        <p class="text-sm text-gray-600 leading-relaxed">{description}</p>
    </div>
    <div class="w-28 h-28 flex-shrink-0">
        <img src={imageUrl} alt={title} class="w-full h-full object-cover rounded-lg">
    </div>
</div>

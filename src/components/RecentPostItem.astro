---
// ファイル: src/components/RecentPostItem.astro
interface Props {
  title: string;
  description: string;
  imageUrl: string;
  readingTime: number;
  url: string;
}
const { title, description, imageUrl, readingTime, url } = Astro.props;
---
<a
  href={url}
  class="group block rounded-lg p-4 transition-colors duration-200 hover:bg-black/5 dark:hover:bg-white/10 no-underline"
>
  {/* ▼▼▼ このdivで、レスポンシブなレイアウトを制御します ▼▼▼ */}
  <div class="flex flex-col items-start gap-4 sm:flex-row sm:items-center">

    {/* 画像セクション */}
    {imageUrl && (
      // スマホでは幅いっぱいに、PCでは固定幅になるように設定
      <div class="w-full aspect-video sm:w-24 sm:h-24 flex-shrink-0">
        <img
          src={imageUrl}
          alt={title}
          class="w-full h-full rounded-md object-cover"
          loading="lazy"
        />
      </div>
    )}

    {/* テキストセクション */}
    <div class="flex-1">
      {/* タイトルはオフホワイト、ホバー時のみアクセントカラー */}
      <h3 class="text-lg font-bold text-[var(--color-text-heading)] transition-colors group-hover:text-[var(--color-accent)]">
        {title}
      </h3>
      {/* 説明文は基本の文字色 */}
      <p class="mt-1 text-sm line-clamp-2 text-[var(--color-text-base)]">
        {description}
      </p>
      <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">
        {readingTime} min read
      </p>
    </div>

  </div>
</a>

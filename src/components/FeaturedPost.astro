---
// ファイル: src/components/FeaturedPost.astro
interface Props {
  post: any;
  readingTime: number; // ✅ 追加
}

const { post, readingTime } = Astro.props; // ✅ 修正
---

<a href={`/posts/${post.slug}`} class="block hover:opacity-90 transition">
  <div class="px-6 mb-8">
    <div class="relative w-full h-48 rounded-lg overflow-hidden mb-4">
      <img src={post.data.image ?? '/images/default.jpg'} alt={post.data.title} class="w-full h-full object-cover" />
    </div>
    <h2 class="text-xl font-bold text-gray-800 mb-1">{post.data.title}</h2>
    <p class="text-gray-600 mb-2">{post.data.description}</p>
    <p class="text-sm text-gray-400">{readingTime} min read</p>
  </div>
</a>
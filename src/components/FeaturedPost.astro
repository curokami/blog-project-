---
// ファイル: src/components/FeaturedPost.astro
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: any;
}

const { post } = Astro.props;
---
{/* 1. カード全体をリンクにし、グループとして定義 */}
<a href={`/posts/${post.slug}/`} class="group block mb-12 max-w-3xl mx-auto">

  {/* 2. 画像をカードの上部に配置 */}
  <div class="overflow-hidden rounded-lg shadow-lg mb-4 aspect-video">
    {post.data.image && (
      <img
        src={post.data.image}
        alt={post.data.title}
        class="w-full h-full object-contain"
        loading="eager"
      />
    )}
  </div>

  {/* 3. テキストコンテンツを下に配置 */}
  <div>
    {/* 4. タイトルはオフホワイト、ホバー時のみアクセントカラー */}
    <h2
      class="text-2xl sm:text-3xl font-bold text-[var(--color-text-heading)] transition-colors group-hover:text-[var(--color-accent)]"
    >
      {post.data.title}
    </h2>
    {/* 5. 説明文は基本の文字色 */}
    <p class="mt-2 text-lg text-[var(--color-text-base)]">
      {post.data.description}
    </p>
  </div>
</a>
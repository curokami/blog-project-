---
import ToggleTheme from './ToggleTheme.tsx';
import Icon from './Icon.astro';

interface Props {
  activePage?: 'home' | 'tags' | 'profile';
}
const { activePage } = Astro.props;

const navLinks = [
  { href: '/', label: 'Home', key: 'home' },
  { href: '/tags', label: 'Tags', key: 'tags' },
  { href: '/profile', label: 'Profile', key: 'profile' },
];
---
<header class="px-6 py-4">
  <div class="max-w-5xl mx-auto">
    <nav class="flex items-center justify-between">
      {/* 左側: サイトタイトル */}
      <a href="/">
        <img src="/images/nanpa_1001.png" alt="ナンパ船" class="h-8 w-auto" />
      </a>

      {/* 右側全体 */}
      <div class="flex items-center gap-6">
        {/* ▼▼▼ ナビゲーションリンク + RSSを4アイコン分左に、1アイコン分上に移動 ▼▼▼ */}
        <ul class="hidden sm:flex items-center gap-6 -translate-x-16 -translate-y-5">
          {navLinks.map(link => (
            <li>
              <a
                href={link.href}
                class:list={[
                  "text-sm font-medium no-underline transition-colors",
                  activePage === link.key
                    ? "text-[var(--color-accent)]"
                    : "text-[var(--color-text-base)] hover:text-[var(--color-accent)]"
                ]}
              >
                {link.label}
              </a>
            </li>
          ))}
          <li>
            <a
              href="/rss.xml"
              aria-label="RSS Feed"
              target="_blank"
              class="text-[var(--color-text-base)] hover:text-[var(--color-accent)] transition-colors"
            >
              <Icon name="rss" className="w-5 h-5" />
            </a>
          </li>
        </ul>

        {/* トグルスイッチを独立配置（右端） */}
        <ToggleTheme client:load />
      </div>
    </nav>
  </div>
</header>